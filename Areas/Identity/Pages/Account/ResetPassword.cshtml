@page
@model ResetPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- Bootstrap 4 CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Fontawesome CDN -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <!-- Custom styles -->
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card" style="height: 405px;width: 405px;">
                <div class="card-header">
                    <h3 style="margin-left: 60px; color: gold;">
                        Reset Password
                    </h3>
                </div>
                <div class="card-body">
                    <form id="resetPasswordForm" method="post">
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" autocomplete="off" />

                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" id="Input_Password" aria-required="true" placeholder="New password" autocomplete="off" />

                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Input.ConfirmPassword" class="form-control" id="Input_ConfirmPassword" aria-required="true" placeholder="Confirm password" autocomplete="off" />

                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox" id="showPasswordCheckbox"> Show Password
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Reset Password" class="btn float-right login_btn" style="margin-top: 15px;
    margin-right: 95px;
    width: 158px;">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        <a href="/Identity/Account/Login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Optional: Show password toggle functionality can be added here if needed
        document.getElementById('showPasswordCheckbox').addEventListener('change', function () {
            var passwordInput = document.getElementById('Input_Password');
            var confirmPasswordInput = document.getElementById('Input_ConfirmPassword');
            if (this.checked) {
                passwordInput.type = 'text';
                confirmPasswordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
                confirmPasswordInput.type = 'password';
            }
        });
    </script>
</body>
</html>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
