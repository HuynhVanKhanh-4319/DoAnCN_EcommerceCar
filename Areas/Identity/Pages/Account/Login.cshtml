@page
@model LoginModel
@{
	Layout = null;
}
@{
	ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html>
<head>
	<title>Login Page</title>
	<!--Made with love by Mutiullah Samim -->
	<!--Bootsrap 4 CDN-->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	<!--Fontawesome CDN-->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

	<!--Custom styles-->
	<link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
	<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card">
				<div class="card-header">
					<h3>Sign In</h3>
					<div class="d-flex justify-content-end social_icon">
						<span><a href="#" onclick="loginWithFacebook()"><i class="fab fa-facebook-square"></i></a></span>
						<span>
							<a href="javascript:void(0);" onclick="loginWithProvider('Google')">
								<i class="fab fa-google-plus-square"></i>
							</a>
						</span>
						<span><a href="#" onclick="loginWithTwitter()"><i class="fab fa-twitter-square"></i></a></span>
					</div>
				</div>
				<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="display:none;">
					<input type="hidden" name="provider" value="Google" />
				</form>
				<div class="card-body">
					<form id="account" method="post">
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />

							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input asp-for="Input.Password" class="form-control" id="Input_Password" aria-required="true" placeholder="password" />

							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="row align-items-center remember">
							<input type="checkbox" id="showPasswordCheckbox"> Show Password
						</div>
						<div class="form-group">
							<input type="submit" value="Login" class="btn float-right login_btn" style="margin-right: 152px;
                                                                                                        margin-top: 16px;">
						</div>
					</form>
				</div>
				<div class="card-footer">
					<div class="d-flex justify-content-center links">
						Don't have an account?<a href="/Identity/Account/Register">Register</a>
					</div>
					<div class="d-flex justify-content-center">
						<a href="/Identity/Account/ForgotPassword">Forgot your password?</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		document.getElementById('showPasswordCheckbox').addEventListener('change', function () {
			var passwordInput = document.getElementById('Input_Password');
			if (this.checked) {
				passwordInput.type = 'text';
			} else {
				passwordInput.type = 'password';
			}
		});
	</script>
</body>

</html>
