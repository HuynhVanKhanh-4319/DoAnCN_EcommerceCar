<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Card hiển thị thông tin hóa đơn -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Chi tiết hóa đơn</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5><i class="bi bi-receipt"></i> Mã hóa đơn:</h5>
                            <p class="text-muted">@Model.Id</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-person"></i> Người dùng:</h5>
                            <p class="text-muted">@Model.ApplicationUsers?.Name</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5><i class="bi bi-cash"></i> Tổng tiền:</h5>
                            <p class="text-muted">@Model.Total.ToString("C")</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-calendar"></i> Ngày đặt:</h5>
                            <p class="text-muted">@Model.OrderDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5><i class="bi bi-info-circle"></i> Trạng thái:</h5>
                            <p class="text-muted">@Model.OrderStatus</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-telephone"></i> Số điện thoại:</h5>
                            <p class="text-muted">@Model.PhoneNumber</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5><i class="bi bi-person-badge"></i> Họ tên:</h5>
                            <p class="text-muted">@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-geo-alt"></i> Địa chỉ:</h5>
                            <p class="text-muted">@Model.Address</p>
                        </div>
                    </div>

                    <!-- Danh sách sản phẩm -->
                    <div class="mt-4">
                        <h5 class="text-primary"><i class="bi bi-cart"></i> Sản phẩm trong hóa đơn:</h5>
                        <div class="row">
                            @foreach (var detail in Model.DetailBills)
                            {
                                <div class="col-md-4">
                                    <div class="card mb-3 shadow-sm">
                                        <div class="card-img-top img-fluid"
                                             style="background-image: url('/images/products/@(detail.Products?.Images != null && detail.Products.Images.Count > 0 ? detail.Products.Images[0].Path : "no-image.png")');
                                                    background-size: cover;
                                                    background-position: center;
                                                    height: 200px;">
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title text-primary">@detail.Products.Name</h6>
                                            <p class="card-text">Giá sản phẩm: @detail.Products.Price</p>
                                            <p class="card-text">Số ngày thuê: @detail.Days</p>
                                            <p class="card-text text-success">Tổng tiền: @detail.ProductPrice.ToString("C")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>




