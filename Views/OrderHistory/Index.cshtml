@model List<CarBook.Models.Bill>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Cars <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Choose Your Car</h1>
            </div>
        </div>
    </div>
</section>
<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Lịch sử Đặt Xe Của Bạn</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm text-center">
            <!-- Thêm text-center cho bảng -->
            <thead class="thead-dark">
                <tr>
                    <th>Mã hóa đơn</th>
                    <th>Ngày đặt</th>
                    <th>Ngày trả</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var bill in Model)
                    {
                        <tr>
                            <td>@bill.Id</td>
                            <td>@bill.StartDate?.ToString("dd/MM/yyyy")</td>
                            <td>@bill.EndDate?.ToString("dd/MM/yyyy")</td>
                            <td>@bill.Total.ToString("C")</td>
                            <td>
                                <span class="(@bill.OrderStatus)">
                                    @bill.OrderStatus
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@bill.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Không có hóa đơn nào!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


